{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"]
}
