{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
